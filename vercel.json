{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "API_KEY": "your-api-key"
  }
}
